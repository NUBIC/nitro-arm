jQuery('#<%= element_to_observe_id %>').on('keyup keypress blur change', function() {
  jQuery.get('/username_lookup.json?username=' + jQuery('#<%= element_to_observe_id %>').val())
    .success(function(response) {
      console.log(response);
      jQuery('#<%= element_to_update_id %>').text(response['lookup_result']);
    })
    .fail(function(response) {
      console.log('failure');
      console.log(response);
      jQuery('#<%= element_to_update_id %>').text('lookup error');
    });
}).trigger('keyup');
