<% provide(:title_tag, "Roles - #{@sponsor.program_title}") %>
<h1>Listing roles for <%= @sponsor.program_title %></h1>

<table>
  <tr>
  <th>Role Name</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
  <td><%= role.name %></td>
    <td><%= link_to 'User List', sponsor_role_url(:sponsor_id=>@sponsor.id, :id=>role.id) %></td>
  </tr>
<% end %>
</table>

<br />
