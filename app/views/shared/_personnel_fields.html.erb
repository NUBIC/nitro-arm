<%= fields_for "key_personnel[#{index}]", key_person do |f| %>
  <p>
    <%= f.hidden_field :id %>
    <%= f.text_field(:username, :size => 14) %> Enter a NetID <%= netid_lookup_tag %> for NU people or a gmail or yahoo email address for non-NU people
    <%= key_personnel_lookup_observer(submission.id, "key_personnel_#{index}", "#{index}").html_safe %>
    <span id='key_personnel_#{index}_username_id'></span>
    <br />
    <%= f.text_field( :first_name, :size => 14) %> First Name <br />
    <%= f.text_field( :last_name, :size => 14) %> Last Name  <br/>
    <%= f.select(:role, ["co-Investigator", "Postdoctoral Fellow", "Statistician", "Informaticist", "Clinical Trialist", "Other"], { :include_blank => true }) %> Please select a role
    <br />
    <% if submission.project.show_manage_biosketches %>
      <% if key_person.user.blank? || key_person.user.biosketch_document_id.blank? %>
        <%= image_tag("warning_16.png",
                      :width => "16px",
                      :height => "16px",
                      :style => "margin-top:-5px; margin-bottom:-2px; margin-right:5px;",
                      :title => "No biosketch is available. Please upload a Biosketch") %>
      <% end %>
      <%= f.file_field(:uploaded_biosketch)%>
      <% unless key_person.user.blank? || key_person.user.biosketch_document_id.blank? %>
        <%= link_to_file(key_person.user.biosketch_document_id, "") %>
        <i>
          Biosketch last saved on <%= (key_person.user.biosketch.last_updated_at || key_person.user.biosketch.updated_at).to_s(:justdate) %>
        </i>
      <% else %>
        Add Biosketch for this collaborator
        <br />
        <span style="margin-left:23px;">
          <%= link_to_nih_biosketch_info.html_safe %>
        </span>
      <% end %>
    <% end %>
    <br/>
    <%= link_to('Remove this key individual',
                { :url => submission_key_person_path(submission.id, (key_person.id || 0)),
                  :with => "'index=#{index.to_s}'" },
                { :class => 'key_personnel_remove_link',
                  :title => "Click to remove this individual from your list of key personnel. It does not delete their profile.",
                  :remote => true,
                  :method => :delete }) %>
  </p>
<% end %>
