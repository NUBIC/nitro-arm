<div id="banner">
  <%= image_tag( "banner_right.jpg", :style=>"width: 100%; height:29px; z-index:1;") %>
  <div style="float:left; z-index:2; margin-top:-29px;">
    <%= image_tag( "banner_edge.jpg") %>
    <%= render "shared/menus" if defined?(current_user_session) && !current_user_session.blank? %>
    <%= image_tag( "banner_edge.jpg") %>
  </div>
  <div id="menu" style="float:right; z-index:4; margin-top:-21px; color:#AAA; padding-right:15px; ">
    <%= link_to(image_tag("help_32.png", :width=>"24px", :height=>"24px", :style=>"margin:-5px 5px -2px 0px;" ) + ' Help ',
                image_path("../docs/NUCATS_Assist_Instructions.pdf"),
                :title => "Instructions on how to use NUCATS Assist and general help manual",
                :style => "background-color:#520064;color:white; margin-right:5px; text-decoration:none;") %>
    <% if defined?(current_user_session) && !current_user_session.blank? %>
      <%= session[:name] || current_user_session.username %>
      <%= link_to "Sign Out", signout_path,
                  :style => "background-color:#520064; color:white; font-size:+2; margin-left:5px; text-decoration:none;",
                  :title => "Logout of NUCATS Assist" %>
    <% else %>
      <%= link_to 'Login', projects_path,
                  :style => "background-color:#520064; color:white; font-size:+2; margin-left:5px; text-decoration:none;",
                  :title => "Login to NUCATS Assist" %>
    <% end %>
  </div>
</div>
<div id="results" class="notice">
  <div id="errors">
    <%= flash[:errors] %>
  </div>
  <%= image_tag 'loading.gif', :id=>'spinner', :style=>"display:none; float:right;" %>
</div>
