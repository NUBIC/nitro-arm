<% provide(:title_tag, "Edit #{@project.project_title}") %>
<h2>Editing '<%= @project.project_title %>'</h2>

<% if @project.visible || ((!current_user.blank? && current_user.system_admin?) || is_admin?(@project.program)) %>
  <%= form_for(@project) do |f| %>
    <%= render('shared/error_messages', :object => f.object) if f.object && !f.object.try(:errors).blank? %>

    <%= render('project_form', :f => f, :project => @project) %>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
<% end %>

<%= link_to 'View', project_path(@project.id) %> |
<%= link_to 'List of all competitions', projects_path %>
