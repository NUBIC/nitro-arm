  <div id='basic_tab'>
    <table>
      <tr>
        <td id="title1" colspan="3">
          <h3>
            <strong>Publish</strong>
          </h3>
        </td>
      </tr>
      <tr class="border_bottom">
        <td class="title, indented">
          <%= f.label :visible, 'Visible' %>
        </td>
        <td class="notes" colspan="2">
          <div class='attribute_description'>
            <%= f.check_box :visible %><br>
            Checked = visible to entire public.<br>
            Unchecked = visible to sponsor admins. 
          </div>
        </td>
      </tr>



      <tr>
        <td id="title2" colspan="3">
          <h3>
            <strong>Basic Attributes</strong>
          </h3>
        </td>
      </tr>
      <tr>
        <td class="title indented">
          <%= f.hidden_field :program_id %>
          <%= hidden_field_tag 'program_id', @program.id if @program %>
          <%= f.label "Competition Name" %>
        </td>
        <td class="notes" colspan="2">
          <%= f.text_field :project_name, :size => 20, required: true %>
          <span class='required_marker'> * </span>
          <div class='attribute_description'>
            Short, no-space name for the competition, will appear in the URL.<br>
            e.g. 'https://grants.nubic.northwestern.edu/competitions/cti/spring2011' where spring2011 is the competition name
          </div>
        </td>
      </tr>
      <tr>
        <td class="title indented">
          <%= f.label "Competition Title" %>
        </td>
        <td class="notes" colspan="2">
          <%= f.text_field :project_title, :size => 80, required: true %>
          <span class='required_marker'> * </span>
          <div class='attribute_description'>
            Descriptive Title. Required
          </div>
        </td>
      </tr>
      <tr>
        <td class="title indented">
          <%= f.label :rfa_url, "Competition URL" %>
        </td>
        <td class="notes" colspan="2">
          <%= f.text_field :rfa_url, :size=>80 %>
          <div class='attribute_description'>
            URL for more information about the competition
