<% provide(:title_tag, 'Forgot Your Password') %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <h3>Forgot your NetID Password?</h3>
    <div>
      NITRO Competitions cannot cannot change your NetID password.<br />
      <%= link_to "Visit NU IT's NetID password reset guidelines",
      'https://www.it.northwestern.edu/netid/resetguidelines.html' %>.
    </div>

  </div>
  <br />
  <div id="login_fields">
    <div>
      <h3>All other users</h3>
      <p>Enter your email below. You'll receive an email with instructions to reset your password.</p>
      <div>
        <%= f.email_field :email, :autofocus => true %>
      </div>
      <div>
        <%= f.submit "Reset my password" %><br/>
        <%= link_to 'Back to Log In', new_session_url, class: 'cancel-link button warning' %>
      </div>
    </div>
  </div>
  <br />
<% end %>

<%= render "devise/shared/links" %>
